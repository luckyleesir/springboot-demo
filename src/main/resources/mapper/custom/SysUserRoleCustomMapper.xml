<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lucky.mapper.custom.SysUserRoleCustomMapper">
    <!--批量新增回写主键支持-->
    <insert id="insertList">
        INSERT INTO sys_user_role (user_id, role_id) VALUES
        <foreach collection="list" separator="," item="item" index="index">
            (#{item.userId,jdbcType=BIGINT},
            #{item.roleId,jdbcType=BIGINT})
        </foreach>
    </insert>
    <select id="getRoleList" resultMap="com.lucky.mapper.auto.SysRoleMapper.BaseResultMap">
        SELECT r.*
        FROM sys_user_role ur 
        LEFT JOIN sys_role r ON ur.role_id = r.role_id
        WHERE ur.user_id = #{userId}
    </select>
    <select id="getPermissionList" resultMap="com.lucky.mapper.auto.SysPermissionMapper.BaseResultMap">
        SELECT
        p.*
        FROM
        sys_user_role ur
        LEFT JOIN sys_role r ON ur.role_id = r.role_id
        LEFT JOIN sys_role_permission rp ON r.role_id = rp.role_id
        LEFT JOIN sys_permission p ON rp.permission_id = p.permission_id
        WHERE
        ur.user_id = #{userId}
    </select>
</mapper>